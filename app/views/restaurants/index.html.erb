<!-- current_user.id == 1 is the restaurant administrator -->

<% if current_user.id == 1 %>
<% elsif current_user.staff.verified != TRUE %>
<div class="alert alert-warning">
<strong>You are awaiting verification from <%= current_user.staff.home_restaurant.restaurant_name %></strong>
</div>
<% end %>

<div class="page-header">
  <h1>
    Restaurants
  </h1>
<br />
<div class="row">
  <div class="col-md-12 mb-2">


      <% @restaurants.each do |restaurant| %>
  <div class="col-xs-4">
      <div class="panel panel-primary">
        <div class="panel-body" style="text-align: center;">
          <h3><%= restaurant.restaurant_name %></h3>
        <a href="/restaurants/<%= restaurant.id %>">
        <img src="<%= restaurant.logo_url %>" height="100" style="margin: auto;">
        </a>
      <h5><%= restaurant.address %></h5>
    </div>
  </div>
</div>
      <% end %>
  </div>
</div>

<% if current_user.id == 1 %>
<a href="/restaurants/new" class="btn btn-success"><i class="glyphicon glyphicon-plus-sign"></i> Add New Restaurant</a>
<% end %>
